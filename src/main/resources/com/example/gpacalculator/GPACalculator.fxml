<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gpacalculator.HelloApplication">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" />
      <Pane prefHeight="537.0" prefWidth="873.0" />
      <ImageView fitHeight="537.0" fitWidth="873.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../images/8.png" />
         </image>
      </ImageView>
      <Label layoutX="24.0" layoutY="103.0" prefHeight="27.0" prefWidth="165.0" text="Enter Student ID : " textFill="WHITE">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <TextField editable="false" fx:id="GPA" layoutX="205.0" layoutY="290.0"  prefHeight="44.0" prefWidth="185.0" promptText="GPA">
         <font>
            <Font size="13.0" />
         </font>
      </TextField>
      <Button fx:id="Calculate" layoutX="208.0" layoutY="204.0" mnemonicParsing="false" onAction="#Calculate"  prefHeight="44.0" prefWidth="185.0" styleClass="enrollBtn" text="Calculate">
         <font>
            <Font size="13.0" />
         </font>
      </Button>
      <Label layoutX="18.0" layoutY="296.0" prefHeight="27.0" prefWidth="165.0" text="Your GPA IS : " textFill="WHITE">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <TextField fx:id="studentId" layoutX="208.0" layoutY="98.0"  prefHeight="44.0" prefWidth="185.0" promptText="Student ID">
         <font>
            <Font size="13.0" />
         </font>
      </TextField>
      <Text fx:id="NeeedHelp" fill="WHITE" layoutX="201.0" layoutY="446.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Need Help !" underline="true" wrappingWidth="180.0">
         <font>
            <Font name="System Bold Italic" size="18.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <effect>
            <ColorAdjust />
         </effect>
      </Text>
   </children>
</AnchorPane>
